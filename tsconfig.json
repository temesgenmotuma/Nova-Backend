{
  "compilerOptions": {
    "lib": ["es2023"],
    "module": "node16",
    "target": "es2022",
    "outDir": "dist",
    "allowJs": true,
    "sourceMap": true,
    "baseUrl": "src",
    "types": ["node", "express"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node16",
    "noImplicitAny": true,
    "typeRoots": ["./node_modules/@types", "./src/types/"]
  },
  "include": ["src/**/*", "src/types/types.d.ts"],
  "exclude": ["node_modules"]
}
